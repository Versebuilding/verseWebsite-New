generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model MediaAsset {
  id        Int      @id @default(autoincrement())
  title     String
  type      String   
  url       String
  page      String
  section   String
  altText   String?
  format    String?
  description String?
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String
  CreatedAt DateTime @default(now())
  ip        String?
  userAgent  String?
  status     String  @default("new")
}